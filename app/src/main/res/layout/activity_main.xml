<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/control_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        app:columnCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rowCount="3"
        app:useDefaultMargins="true">

        <Button
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="播放" />

        <Button
            android:id="@+id/pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="暂停" />

        <Button
            android:id="@+id/stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="停止" />

        <Button
            android:id="@+id/repeat_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="循环" />

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="上一首" />

        <Button
            android:id="@+id/rew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="倒退" />

        <Button
            android:id="@+id/ffwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="快进" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="下一首" />

        <Button
            android:id="@+id/speed_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onPlayControl"
            android:text="倍速播放"
            app:layout_columnSpan="4"
            app:layout_columnWeight="4" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/debug_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playview" />

    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@+id/timeBar"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_below="@+id/debug_view"
        android:visibility="gone"
        app:buffered_color="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/debug_view"
        app:played_color="@color/purple_700"
        app:unplayed_color="@android:color/black" />

    <Button
        android:id="@+id/btn_haha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onPlayControl"
        android:text="流转"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/playview"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:resize_mode="zoom"
        app:surface_type="texture_view"
        app:use_controller="true" />
</androidx.constraintlayout.widget.ConstraintLayout>